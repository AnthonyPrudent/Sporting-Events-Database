<!-- leagues.hbs -->
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

<section>
    
    <article>

        <h3>Sports</h3>
        <p>Serves as a reference guide to different types of sports, displaying name, rules manual, and a short description.</p>
        {{!-- Create a table --}}
        <table id="sports-table">

            {{!-- Header section --}}
            <thead>

                {{!-- For just the first row, we print each key of the row object as a header cell so we
                know what each column means when the page renders --}}
                <tr>
                    {{#each data.[0]}}
                    <th>
                        {{@key}}
                    </th>
                    {{/each}}
                </tr>
            </thead>

            {{!-- Body section --}}
            <tbody>

                {{!-- For each row, print the attribute columns in order --}}
                {{#each data}}
                <tr data-value={{this.SportID}}>
                    <td>{{this.SportID}}</td>
                    <td>{{this.Name}}</td>
                    <td>{{this.RulesManual}}</td>
                    <td>{{this.Description}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </article>

    <article>
        {{!-- Form to add a record to the table  --}}
        <h3 id="add-sport-form-header">Add Sport</h3>
        <p id="add-sport-form-description">Fill out the information below and click submit when finished.</p>
        <form id="add-sport-form-ajax">
            <label for="input-name">Name: </label>
            <input type="text" name="input-name" id="input-name" required>
            
            <label for="input-rules">Rules Manual: </label>
            <input type="text" name="input-rules" id="input-rules" required>

            <label for="input-description">Description: </label>
            <textarea name="input-description" id="input-description" required></textarea>

            <input type="submit">
        </form>
    </article>
</section>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_sport.js"></script>